---
import { getProduct, getRandomProducts } from "@/services/api";
import MainLayout from "@/layouts/MainLayout.astro";
import type { Product } from "@/types";

const { productId } = Astro.params;
if (!productId) return Astro.redirect("/");
const product = await getProduct(productId!);
if (!product) return Astro.redirect("/");

const mockSeller = {
    name: ["Diego Emmanuel", "Luis Alberto"][Math.floor(Math.random() * 2)],
    rating: (Math.random() * (5.0 - 4.0) + 4.0).toFixed(1),
    sales: Math.floor(Math.random() * (6000 - 1500 + 1)) + 1500,
    isOfficial: Math.random() < 0.5
};

const randomProducts = await getRandomProducts(4);
---

<MainLayout>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 my-5">
        <a
            class="mb-6 py-2 px-4 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-600 rounded-lg font-semibold transition-colors duration-200 flex items-center gap-2"
            href="/"
        >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"
                ></path></svg
            >
            Volver a la página anterior
        </a>

        <div class="flex flex-col lg:flex-row gap-6">
            <div
                class="lg:w-8/12 bg-white dark:bg-gray-900 rounded-xl shadow-2xl p-6 border border-gray-100 dark:border-gray-800"
            >
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="flex flex-col items-center justify-center">
                        <img
                            src={product.image || "https://placehold.co/400x400/1F2937/F3F4F6?text=PRODUCTO"}
                            alt={product.name}
                            class="w-full h-auto max-h-[450px] object-contain rounded-lg shadow-xl border border-gray-200 dark:border-gray-700"
                            transition:name={`product-id-${product.id}`}
                        />
                    </div>

                    <div class="flex flex-col">
                        <p class="text-sm text-gray-500 dark:text-gray-400 font-medium mb-1">
                            {mockSeller.isOfficial ? "Nuevo | 3 vendidos" : "Usado | 1 vendido"}
                        </p>
                        <h1
                            class="text-3xl font-extrabold text-gray-900 dark:text-gray-50 mb-4 break-words leading-tight max-w-full overflow-hidden capitalize"
                            transition:name={`product-name-${product.id}`}
                        >
                            {product.name}
                        </h1>

                        <p
                            class="text-4xl font-black text-indigo-600 dark:text-indigo-400 mb-2"
                            transition:name={`product-price-${product.id}`}
                        >
                            ${product.price.toFixed(2)}
                        </p>
                        <p class="text-sm text-gray-600 dark:text-gray-400 mb-6">
                            6 meses sin intereses de ${(product.price / 6).toFixed(2)}
                        </p>

                        <div class="flex flex-col gap-3 mt-4">
                            <button
                                class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-lg transition-colors duration-200 shadow-md"
                            >
                                Comprar ahora
                            </button>
                            <button
                                class="w-full py-3 bg-indigo-100 hover:bg-indigo-200 dark:bg-gray-800 dark:hover:bg-gray-700 text-indigo-600 dark:text-indigo-400 font-bold rounded-lg transition-colors duration-200 border border-indigo-600 dark:border-indigo-500"
                            >
                                Agregar al carrito
                            </button>
                        </div>
                    </div>
                </div>

                <div class="mt-8">
                    <h2 class="text-xl font-bold text-gray-900 dark:text-gray-50 mb-3">Descripción</h2>
                    <p
                        class="text-gray-700 dark:text-gray-300 leading-relaxed"
                        transition:name={`product-description-${product.id}`}
                    >
                        {product.description}
                    </p>
                    <div class="text-xs text-gray-500 dark:text-gray-600 mt-4">
                        Publicado el {
                            new Date(product.created_at || Date.now()).toLocaleDateString("es-ES", {
                                year: "numeric",
                                month: "long",
                                day: "numeric"
                            })
                        }
                    </div>
                </div>
            </div>

            <div class="lg:w-4/12 flex flex-col gap-6">
                <div
                    class="bg-white dark:bg-gray-900 rounded-xl shadow-xl p-6 border border-gray-100 dark:border-gray-800 sticky top-24"
                >
                    <p class="font-bold text-green-600 dark:text-green-400 mb-3 flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            ><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"
                            ></path></svg
                        >
                        Recíbelo gratis entre el {
                            new Date(Date.now() + 2 * 24 * 60 * 60 * 1000).toLocaleDateString("es-ES", {
                                weekday: "long"
                            })
                        } y el {
                            new Date(Date.now() + 3 * 24 * 60 * 60 * 1000).toLocaleDateString("es-ES", {
                                weekday: "long"
                            })
                        }
                    </p>
                    <p class="text-xs text-indigo-600 dark:text-indigo-400 mb-4 ml-7">
                        Ver más detalles y formas de entrega
                    </p>

                    <p class="text-sm text-gray-700 dark:text-gray-300 mb-4 flex items-center gap-2">
                        <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"
                            ></path><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg
                        >
                        Retira gratis entre el viernes y el lunes
                    </p>
                    <p class="text-xs text-indigo-600 dark:text-indigo-400 mb-4 ml-7">Ver en el mapa</p>

                    <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                        <span
                            class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${product.stock > 0 ? "text-green-800 bg-green-100 dark:text-green-200 dark:bg-green-900" : "text-red-800 bg-red-100 dark:text-red-200 dark:bg-red-900"}`}
                        >
                            {product.stock > 0 ? `Stock disponible (${product.stock} unidades)` : "Agotado"}
                        </span>

                        {
                            product.stock > 0 && (
                                <div class="mt-4 flex items-center gap-2">
                                    <label for="quantity" class="text-sm font-medium text-gray-700 dark:text-gray-300">
                                        Cantidad:
                                    </label>
                                    <select
                                        id="quantity"
                                        class="p-1 border border-gray-300 dark:border-gray-600 rounded-md text-sm dark:bg-gray-800 text-gray-700 dark:text-gray-300"
                                    >
                                        {Array.from({ length: Math.min(product.stock, 10) }, (_, i) => (
                                            <option value={i + 1}>
                                                {i + 1} unidad{i > 0 ? "es" : ""}
                                            </option>
                                        ))}
                                    </select>
                                </div>
                            )
                        }
                    </div>
                </div>

                <div
                    class="bg-white dark:bg-gray-900 rounded-xl shadow-xl p-6 border border-gray-100 dark:border-gray-800"
                >
                    <h3 class="text-sm text-gray-500 dark:text-gray-400 mb-2">Vendido por:</h3>
                    <div class="flex items-center justify-between mb-4">
                        <h4 class="font-bold text-lg text-indigo-600 dark:text-indigo-400">
                            {mockSeller.name}
                        </h4>
                        <button class="text-xs text-indigo-500 hover:underline">Ver perfil</button>
                    </div>
                    <div class="flex justify-between text-sm text-gray-600 dark:text-gray-400">
                        <span>{mockSeller.sales.toLocaleString()} ventas</span>
                        <span class="font-medium text-amber-500">⭐ {mockSeller.rating}</span>
                    </div>
                </div>

                <div
                    class="bg-white dark:bg-gray-900 rounded-xl shadow-xl p-6 border border-gray-100 dark:border-gray-800"
                >
                    <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3 flex items-center gap-2">
                        <svg class="w-5 h-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg
                        >
                        Devolución gratis. Tienes 30 días.
                    </p>
                    <p class="text-sm font-medium text-gray-700 dark:text-gray-300 flex items-center gap-2">
                        <svg class="w-5 h-5 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M9 12l2 2 4-4m5.656 8.344A8 8 0 1012 21.656 8 8 0 0021.656 12zm-4.312 0a4 4 0 11-8 0 4 4 0 018 0z"
                            ></path></svg
                        >
                        30 días de garantía de fábrica.
                    </p>
                </div>
            </div>
        </div>

        <div class="mt-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-50 mb-6">
                Productos que también te pueden interesar
            </h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">
                {
                    randomProducts.map((r: Product) => (
                        <a
                            href={`/product/${r.id}`}
                            class="group bg-white dark:bg-gray-900 rounded-2xl shadow-md hover:shadow-2xl border border-gray-100 dark:border-gray-800 hover:border-indigo-500 transition-all duration-300 overflow-hidden cursor-pointer"
                        >
                            <div class="relative w-full h-48">
                                <img
                                    src={r.image}
                                    alt={r.name}
                                    transition:name={`product-id-${r.id}`}
                                    class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
                                />
                                <div
                                    class="absolute top-2 left-2 bg-indigo-600 text-white text-xs font-semibold px-2 py-1 rounded-full shadow-md"
                                    transition:name={`product-price-${r.id}`}
                                >
                                    ${r.price}
                                </div>
                            </div>
                            <div class="p-4 flex flex-col justify-between h-[6.5rem]">
                                <h4
                                    class="font-semibold text-gray-900 dark:text-gray-100 text-sm mb-2 line-clamp-2 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors"
                                    transition:name={`product-name-${r.id}`}
                                >
                                    {r.name}
                                </h4>
                                <button class="text-xs font-medium bg-indigo-100 dark:bg-indigo-800 text-indigo-600 dark:text-indigo-300 py-1.5 rounded-lg hover:bg-indigo-200 dark:hover:bg-indigo-700 transition-colors">
                                    Ver producto
                                </button>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</MainLayout>
